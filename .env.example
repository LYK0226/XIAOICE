# Environment variables for Flask and Google AI Studio
# Flask
SECRET_KEY="your_very_secret_key_here"
FLASK_APP="run.py"
FLASK_ENV="development"

# JWT (optional override; defaults to SECRET_KEY if not provided)
JWT_SECRET_KEY="your_jwt_secret_here"
JWT_COOKIE_SECURE=false  # true in production
JWT_COOKIE_SAMESITE="Lax"

# Database
DATABASE_URL=postgresql://xiaoice_user:xiaoice_password@localhost:5432/xiaoice
#DATABASE_URL=postgresql://xiaoice_user:xiaoice_password@host.docker.internal:5432/xiaoice
CREATE_DB_ON_STARTUP=true

# Encryption key for API keys (generate a secure random key)
# DO NOT COMMIT: Replace "your_32_byte_encryption_key_here" with your actual Fernet key
ENCRYPTION_KEY="your_32_byte_encryption_key_here"

GCS_BUCKET_NAME="fyp-project-uploads"
GCS_CREDENTIALS_PATH="your_gcs_credentials_path_here"

# Pose Detection Configuration
POSE_DETECTION_ENABLED=true
POSE_MODEL_COMPLEXITY=1  # 0=lite (fastest), 1=full (balanced), 2=heavy (most accurate)
POSE_MIN_DETECTION_CONFIDENCE=0.5  # Minimum confidence for initial detection (0.0-1.0)
POSE_MIN_TRACKING_CONFIDENCE=0.5  # Minimum confidence for tracking (0.0-1.0)
POSE_MAX_CONCURRENT_SESSIONS=50  # Maximum number of concurrent pose detection sessions
POSE_FRAME_SIZE_LIMIT_MB=5  # Maximum frame size in megabytes